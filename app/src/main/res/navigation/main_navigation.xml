<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.qualentum.sprint4.presentation.MainFragment"
        android:label="@string/toolbar_title_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_favouritesFragment"
            app:destination="@id/favouritesFragment"
            app:popUpTo="@id/mainFragment"
            app:popUpToInclusive="false" />
        <action
            android:id="@+id/action_mainFragment_to_detailFragment"
            app:destination="@id/detailFragment"/>
        <action
            android:id="@+id/action_fragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
        <action
            android:id="@+id/action_mainFragment_to_addPersonFragment"
            app:destination="@id/addPersonFragment" />
    </fragment>
    <fragment
        android:id="@+id/favouritesFragment"
        android:name="com.qualentum.sprint4.presentation.FavouritesFragment"
        android:label="@string/toolbar_title_favourites"
        tools:layout="@layout/fragment_favourites" >
        <action
            android:id="@+id/action_favouritesFragment_to_mainFragment"
            app:destination="@id/mainFragment"
            app:popUpTo="@id/mainFragment"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_fragment_to_settingsFragment"
            app:destination="@id/settingsFragment"
            app:popUpTo="@id/favouritesFragment"
            app:popUpToInclusive="false" />

    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.qualentum.sprint4.presentation.DetailFragment"
        android:label="@string/toolbar_title_detail"
        tools:layout="@layout/fragment_detail" >
        <action
            android:id="@+id/action_fragment_to_settingsFragment"
            app:destination="@id/settingsFragment"
            app:popUpTo="@id/detailFragment"
            app:popUpToInclusive="false" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.qualentum.sprint4.presentation.SettingsFragment"
        android:label="@string/toolbar_title_settings"
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/addPersonFragment"
        android:name="com.qualentum.sprint4.presentation.AddPersonFragment"
        android:label="@string/toolbar_title_add_person"
        tools:layout="@layout/fragment_add_person">
        <action
            android:id="@+id/action_fragment_to_settingsFragment"
            app:destination="@id/settingsFragment"
            app:popUpTo="@id/addPersonFragment"
            app:popUpToInclusive="false" />
    </fragment>
</navigation>